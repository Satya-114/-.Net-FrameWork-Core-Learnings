@model Employee

<h2>Edit Employee</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div>
        <label>Name</label>
        <input type="text" name="name" value="@Model.Name" required />
    </div>
    <div>
        <label>Position</label>
        <input type="text" name="position" value="@Model.Position" required />
    </div>
    <div>
        <label>Salary</label>
        <input type="number" name="salary" value="@Model.Salary" required />
    </div>
    <button type="submit">Update</button>
</form>
