@model DataAccess.Entities.Employee

<h1>Create Employee</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position" class="control-label"></label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PracticeId" class="control-label">Practice</label>
        <select asp-for="PracticeId" class="form-control" asp-items="ViewBag.Practices"></select>
    </div>
    <div class="form-group">
        <label>Projects</label>
        <select asp-for="EmployeeProjects" class="form-control" asp-items="ViewBag.Projects" multiple></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
